<%= render 'form' %>

<% if @requirements_string != nil %>
<p>
<%= @requirements_string.html_safe %>
</p>
<% end %>

<% if @recommendations != nil && @recommendations.size > 0 %>
	<strong>Maybe Try...</strong>
	<div class="recommendations">
		<% @recommendations.each do |recommendation| %>
			<% if recommendation.is_a?(Equipment) %>
				<%= render :partial => 'recommendation', :locals => { :recommendation => recommendation } %>
			<% elsif recommendation.is_a?(Talisman) %>
				<%= render :partial => 'talisman_recommendation', :locals => { :recommendation => recommendation } %>
			<% end %>
		<% end %>
	</div>
<% end %>
<br/>
<%= link_to 'Back To Builds', builds_path, {:class => 'btn'} %>
