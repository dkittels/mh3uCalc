<h1>Listing Builds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Generated Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @builds.each do |build| %>
  <tr>
    <td><%= build.name %></td>
    <td><%= build.description %></td>
    <td><%= build.generated_description %></td>
    <td><%= link_to 'Show', build_path(build) %></td>
    <td><%= link_to 'Edit', edit_build_path(build) %></td>
    <td><%= link_to 'Destroy', build, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

