<h1>Equipment</h1>

<table class="table">
	<thead>
	  <tr>
		<th>Name</th>
		<th>Position</th>
		<th>Slots</th>
		<th>Armor set</th>
		<th>Fire res</th>
		<th>Water res</th>
		<th>Thunder res</th>
		<th>Ice res</th>
		<th>Dragon res</th>
		<th>Max defense</th>
		<th></th>
		<th></th>
		<th></th>
	  </tr>
	</thead>
	<tbody>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%= equipment.name %></td>
    <td><%= get_position_name(equipment.position) %></td>
    <td><%= equipment.slots %></td>
    <td><%= equipment.armor_set.name %></td>
    <td><%= equipment.fire_res %></td>
    <td><%= equipment.water_res %></td>
    <td><%= equipment.thunder_res %></td>
    <td><%= equipment.ice_res %></td>
    <td><%= equipment.dragon_res %></td>
    <td><%= equipment.max_defense %></td>
    <td><%= link_to 'Show', equipment, {:class => 'btn btn-mini'} %></td>
    <td><%= link_to 'Edit', edit_equipment_path(equipment), {:class => 'btn btn-mini'} %></td>
    <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Equipment', new_equipment_path, {:class => 'btn btn-success'} %>
